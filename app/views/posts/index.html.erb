<% if current_user.try(:admin?) %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

<% @posts.each do |post| %>
  <article id="test">
    <h2><%= post.title %></h2>
    <h4> by <%= post.by %> on <%=post.created_at %></h4>
    <p><%= post.body %></p>
    <h6><%= link_to "#{post.comments.size} comments", post %></h6>
    <hr>
  </article>
<% end %>

<%= will_paginate @posts %>


