  <article class="post">
    <h2>
      <%= @post.title %>
    </h2>

    <h4>
      Posted on <%= @post.created_at %> by <%= @post.by %> <%= post_gravatar @post %>
    </h4>

    <section>
      <%= markdown(@post.body).html_safe %>
    </section>
    <% if current_user.try(:admin?) %>
      <%= link_to 'Edit', edit_post_path(@post) %> 
    <% end %>
    <hr>
  </article>

    <% if @post.comments.size > 0 %>
    <h4>Comments</h4>
      <% for comment in @post.comments %>
        <h5><%= comment.by %></h5>
        <h6>on <%= comment.published_on %></h6>
        <section><%= markdown(comment.body).html_safe %></section>
	<hr>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <fieldset>
      	<legend>New Comment</legend>
	  <%= form_for [@post, Comment.new] do |f| %>
  	    <%= f.hidden_field :by, :value => current_user.username %>

	    <div class="row">
 	      <div class="large-12 columns"><%= f.text_area :body %></div>
	    </div>

    	    <%= f.submit %>
         <% end %>
      </fieldset>
    <% else %>
      <p>Commenters must be <%= link_to 'logged in', new_user_session_path %> to leave comments.</p>
      <p><%= link_to 'Registration', new_user_registration_path %> for new commenters</p>
    <% end %>

